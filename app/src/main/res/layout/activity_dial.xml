<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="20dp"
    tools:context=".dial">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/dialTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Emergency Contacts"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <!-- Police -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/contact_card"
            android:layout_marginVertical="8dp"
            android:elevation="4dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/policeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Police"
                android:textColor="#21318E"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Ambulance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/contact_card"
            android:layout_marginVertical="8dp"
            android:elevation="4dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/ambulanceNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Ambulance"
                android:textColor="#21318E"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Women Helpline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/contact_card"
            android:layout_marginVertical="8dp"
            android:elevation="4dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/womenHelpline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Women Helpline"
                android:textColor="#21318E"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Road Accident Helpline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/contact_card"
            android:layout_marginVertical="8dp"
            android:elevation="4dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/roadHelpline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Road Accident Helpline"
                android:textColor="#21318E"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
